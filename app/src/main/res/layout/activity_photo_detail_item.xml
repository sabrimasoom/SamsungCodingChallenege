<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/detail_margin_side"
    android:layout_marginStart="@dimen/detail_margin_side"
    android:layout_marginTop="@dimen/detail_margin_top"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/photo_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_cardview"
        android:paddingTop="@dimen/margin_cardview"
        android:textColor="@color/detail_text_color"
        android:textSize="@dimen/detail_text_size" />
</LinearLayout>